<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/notify_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/text_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/notify_image">

        <TextView
            android:id="@+id/notify_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaa"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/notify_song_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaa"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/notify_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"/>

    <RelativeLayout
        android:id="@+id/notify_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/text_linear"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/notify_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp">

        <ImageView
            android:id="@+id/notify_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/notify_start"/>

        <ImageView
            android:id="@+id/notify_previous"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/notify_play"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/previous"/>

        <ImageView
            android:id="@+id/notify_next"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/notify_play"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/next"/>

    </RelativeLayout>

</RelativeLayout>